{
    "compilerOptions": {
        "target": "ES5",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "module": "commonjs",
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ]
    },
    "include": [
        "tutorial/**/*",
        "test/**/*",
        "node_modules/yass/**/*"
    ],
    "exclude": [] // needed because default includes "node_modules"
}
